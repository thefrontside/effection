{
  "tasks": {
    "build:npm": "deno run -A tasks/build-npm.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["prefer-const", "require-yield"]
    },
    "files": {
      "exclude": [
        "build",
        "website",
        "packages"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "build",
        "website",
        "packages",
        "CODE_OF_CONDUCT.md",
        "README.md"
      ]
    }
  },
  "test": {
    "files": {
      "exclude": [
        "build",
        "packages"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  }
}
